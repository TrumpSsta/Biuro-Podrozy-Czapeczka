@model IEnumerable<BiuroPodrozyCzapeczka.Models.Pracownik>

@{
    ViewBag.Title = "Lista pracowników";
}

<h2>Lista pracowników</h2>

<p>
    @Html.ActionLink("Dodaj nowego pracownika", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pensja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Placowka.Wojewodztwo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Imie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwisko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pensja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Placowka.Wojewodztwo)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.IdPracownika }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.IdPracownika }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.IdPracownika })
        </td>
    </tr>
}

</table>
