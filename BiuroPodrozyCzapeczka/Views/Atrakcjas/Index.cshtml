@model IEnumerable<BiuroPodrozyCzapeczka.Models.Atrakcja>

@{
    ViewBag.Title = "Lista Atrakcji";
}

<h2>Atrakcje</h2>

<p>
    @Html.ActionLink("Dodaj atrakcje", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NazwaAtrakcji)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdresAtrakcji)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CenaAtrakcji)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NazwaAtrakcji)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdresAtrakcji)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CenaAtrakcji)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.IdAtrakcji }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.IdAtrakcji }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.IdAtrakcji })
        </td>
    </tr>
}

</table>
